rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Claim attachments
    match /claims/{claimId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
  }
}
